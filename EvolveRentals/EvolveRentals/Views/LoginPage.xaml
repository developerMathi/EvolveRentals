<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EvolveRentals.Views.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:local="clr-namespace:EvolveRentals.MarkupExtensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:renders="clr-namespace:EvolveRentals.Renders"
    BackgroundColor="{AppThemeBinding Dark={StaticResource BlackColor}, Light={StaticResource BackGroundColor}}"
    NavigationPage.HasNavigationBar="False"
    mc:Ignorable="d">
    <ContentPage.Content>
        <Grid>

            <Image
                Aspect="AspectFill"
                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.cars.car6.jpg}"
                VerticalOptions="Fill"
                x:Name="BackImage"
                IsVisible="false">

            </Image>
            <!--<MediaElement Source="ms-appx:///miroshnichenko.mp4" Aspect="AspectFill" AutoPlay="True" Volume="0" IsLooping="True" />-->
            <ScrollView>
                <!--<ScrollView.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="{AppThemeBinding Dark={StaticResource BackGroundColor},Light={StaticResource BackGroundColor}}" Offset="0.01"/>
                        <GradientStop Color="Transparent" Offset="0.2"/>
                        <GradientStop Color="Transparent" Offset="0.7"/>
                        <GradientStop Color="{AppThemeBinding Dark={StaticResource BackGroundColor},Light={StaticResource BackGroundColor}}" Offset="1.0" />
                    </LinearGradientBrush>
                </ScrollView.Background>-->
                <StackLayout
                Margin="20,30,20,20"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="CenterAndExpand">
                    <Image
                    x:Name="logoImage"
                    Margin="10,0,10,50"
                    Aspect="AspectFit"
                    HeightRequest="120"
                   Source="{AppThemeBinding Dark=EzLogoWhite.png, Light=EzLogo.png}">
                        <Image.HeightRequest>
                            <OnIdiom
                            x:TypeArguments="x:Double"
                            Phone="120"
                            Tablet="160" />
                        </Image.HeightRequest>
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"
                                                  NumberOfTapsRequired="1"></TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>

                    <StackLayout
                    Margin="0,0,0,40"
                    Padding="0"
                    HorizontalOptions="CenterAndExpand">
                        <Label
                        FontFamily="Roboto-Black"
                        HorizontalOptions="Center"
                        Text="Login"
                        TextColor="{StaticResource PrimaryColor}">
                            <Label.FontSize>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="26" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="22"
                                        Tablet="28" />
                                    </On>
                                </OnPlatform>
                            </Label.FontSize>
                        </Label>



                        <Label
                        FontFamily="Roboto-Medium"
                        HorizontalOptions="Center"
                        Text="Please sign in to continue"
                        TextColor= "{AppThemeBinding Dark={StaticResource BackGroundColor}, Light={StaticResource BlackColor}}">
                            <Label.FontSize>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="16"
                                        Tablet="20" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="18"
                                        Tablet="24" />
                                    </On>
                                </OnPlatform>
                            </Label.FontSize>
                        </Label>
                    </StackLayout>


                    <Grid RowSpacing="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Frame
                        Grid.Row="0"
                        Padding="10,0,0,0"
                        BorderColor="{AppThemeBinding Dark={StaticResource BackGroundColor}, Light={StaticResource BlackColor}}"
                        CornerRadius="10"
                        HasShadow="False"
                        VerticalOptions="FillAndExpand"
                            >
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="{AppThemeBinding Dark='0,1',Light='1,1'}">
                                    <GradientStop Color="{AppThemeBinding Dark={StaticResource BlackColor},Light={StaticResource BackGroundColor}}" Offset="0.05" />
                                    <GradientStop Color="Transparent" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Frame.Background>


                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image
                                x:Name="emailIcon"
                                Grid.Column="0"
                                Margin="10,0,0,0"
                                BackgroundColor="Transparent"
                                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconEmail.png}"
                                VerticalOptions="CenterAndExpand">
                                    <Image.HeightRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="25"
                                                Tablet="30" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="25"
                                                Tablet="30" />
                                            </On>
                                        </OnPlatform>
                                    </Image.HeightRequest>
                                    <Image.WidthRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="25"
                                                Tablet="30" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="25"
                                                Tablet="30" />
                                            </On>
                                        </OnPlatform>
                                    </Image.WidthRequest>
                                </Image>

                                <renders:CustomEntry
                                x:Name="loginEmailAddress"
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                FontFamily="Roboto-Medium"
                                Keyboard="Email"
                                Placeholder="Email Address"
                                PlaceholderColor="{AppThemeBinding Dark={StaticResource BackGroundColor}, Light={StaticResource BlackColor}}"
                                TextColor="{AppThemeBinding Dark={StaticResource BackGroundColor}, Light={StaticResource BlackColor}}">
                                    <renders:CustomEntry.FontSize>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="14"
                                                Tablet="18" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="16"
                                                Tablet="20" />
                                            </On>
                                        </OnPlatform>
                                    </renders:CustomEntry.FontSize>
                                </renders:CustomEntry>
                            </Grid>
                            <Frame.HeightRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="50"
                                        Tablet="60" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="50"
                                        Tablet="60" />
                                    </On>
                                </OnPlatform>
                            </Frame.HeightRequest>
                        </Frame>
                        <Frame
                        Grid.Row="1"
                        Padding="10,0,0,0"
                        BackgroundColor="Transparent"
                        BorderColor="{AppThemeBinding Dark={StaticResource BackGroundColor}, Light={StaticResource BlackColor}}"
                        CornerRadius="10"
                        HasShadow="False">
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0"  EndPoint="{AppThemeBinding Dark='0,1',Light='1,1'}">
                                    <GradientStop Color="{AppThemeBinding Dark={StaticResource BlackColor},Light={StaticResource BackGroundColor}}" Offset="0.05" />
                                    <GradientStop Color="Transparent" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Frame.Background>
                            <Frame.HeightRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="50"
                                        Tablet="60" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="50"
                                        Tablet="60" />
                                    </On>
                                </OnPlatform>
                            </Frame.HeightRequest>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                </Grid.ColumnDefinitions>


                                <Image
                                x:Name="passwordIcon"
                                Grid.Column="0"
                                Margin="10,0,0,0"
                                BackgroundColor="Transparent"
                                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconPassword.png}"
                                VerticalOptions="CenterAndExpand">
                                    <Image.HeightRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="25"
                                                Tablet="30" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="25"
                                                Tablet="30" />
                                            </On>
                                        </OnPlatform>
                                    </Image.HeightRequest>
                                    <Image.WidthRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="25"
                                                Tablet="30" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="25"
                                                Tablet="30" />
                                            </On>
                                        </OnPlatform>
                                    </Image.WidthRequest>
                                </Image>

                                <renders:CustomEntry
                                x:Name="loginPassword"
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                FontFamily="Roboto-Medium"
                                IsPassword="True"
                                Placeholder="Password"
                                PlaceholderColor="{AppThemeBinding Dark={StaticResource BackGroundColor}, Light={StaticResource BlackColor}}"
                                TextColor="{AppThemeBinding Dark={StaticResource BackGroundColor}, Light={StaticResource BlackColor}}">
                                    <renders:CustomEntry.FontSize>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="14"
                                                Tablet="18" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="16"
                                                Tablet="20" />
                                            </On>
                                        </OnPlatform>
                                    </renders:CustomEntry.FontSize>
                                </renders:CustomEntry>
                                <ImageButton
                                x:Name="passwordvisible"
                                Grid.Column="2"
                                Margin="0,0,10,0"
                                BackgroundColor="Transparent"
                                Clicked="passwordvisible_Clicked"
                                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconInVisible.png}"
                                VerticalOptions="CenterAndExpand">
                                    <ImageButton.HeightRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="30"
                                                Tablet="35" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="30"
                                                Tablet="35" />
                                            </On>
                                        </OnPlatform>
                                    </ImageButton.HeightRequest>
                                    <ImageButton.WidthRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="20"
                                                Tablet="25" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="20"
                                                Tablet="25" />
                                            </On>
                                        </OnPlatform>
                                    </ImageButton.WidthRequest>
                                </ImageButton>
                            </Grid>
                        </Frame>


                    </Grid>
                    <Label
                    x:Name="errorLabelcc"
                    Margin="0,0,0,5"
                    FontFamily="Roboto-Medium"
                    FontSize="Small"
                    TextColor="{StaticResource DanderRed}" />
                    <Button
                    x:Name="LoginButton"
                        BorderColor="{StaticResource PrimaryColor}"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    BorderWidth="2"
                    Clicked="LoginButton_Clicked"
                    FontFamily="Roboto-Medium"
                    HorizontalOptions="FillAndExpand"
                    StyleClass="bouncy"
                    Text="LOG-IN"
                    TextColor="{StaticResource BlackColor}"
                    VerticalOptions="CenterAndExpand"
                        CornerRadius="5">
                        <!--<Button.Background>
                            <LinearGradientBrush StartPoint="0,0"  EndPoint="1,0">
                                <GradientStop Color="{AppThemeBinding Dark={StaticResource PrimaryColorDuplicate},Light={StaticResource PrimaryColorDuplicate}}" Offset="0.1" />
                                <GradientStop Color="{StaticResource BlackColor}" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Button.Background>-->
                        <Button.HeightRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="50"
                                    Tablet="60" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="50"
                                    Tablet="60" />
                                </On>
                            </OnPlatform>
                        </Button.HeightRequest>
                        <Button.FontSize>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="14"
                                    Tablet="18" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="16"
                                    Tablet="20" />
                                </On>
                            </OnPlatform>
                        </Button.FontSize>
                    </Button>

                    <!--<Grid x:Name="LoginButton" Padding="0">

                    <Label
                        FontFamily="Roboto-Medium"
                        FontSize="Medium"
                        HorizontalOptions="CenterAndExpand"
                        StyleClass="bouncy"
                        TextColor="{StaticResource BackGroundColor}"
                        VerticalOptions="CenterAndExpand" />
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="LoginButton_Clicked" />
                    </Grid.GestureRecognizers>
                </Grid>-->

                    <Frame
                    x:Name="loginSpinnerFrame"
                    Margin="0"
                    Padding="0"
                        BorderColor="{StaticResource BackGroundColor}"
                    BackgroundColor="Transparent"
                    HasShadow="False"
                    HeightRequest="50"
                    IsVisible="False">
                        <ActivityIndicator
                        x:Name="loginSpinner"
                        HeightRequest="30"
                        IsRunning="True"
                        VerticalOptions="Center"
                        Color="{StaticResource BackGroundColor}" />
                        <Frame.HeightRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="50"
                                    Tablet="60" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="50"
                                    Tablet="60" />
                                </On>
                            </OnPlatform>
                        </Frame.HeightRequest>
                    </Frame>

                    <Label
                    x:Name="forgetPasswordLabel"
                    Margin="0,20,0,0"
                    FontFamily="Roboto-Medium"
                    HorizontalOptions="Center"
                    Text="Forget Password?"
                    TextColor="{AppThemeBinding Dark={StaticResource BackGroundColor}, Light={StaticResource BlackColor}}"
                    TextDecorations="Underline">
                        <Label.FontSize>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="16"
                                    Tablet="20" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="18"
                                    Tablet="22" />
                                </On>
                            </OnPlatform>
                        </Label.FontSize>
                    </Label>

                    <StackLayout
                    Margin="0,20,0,20"
                    HorizontalOptions="CenterAndExpand"
                    Orientation="Horizontal"
                    Spacing="1">
                        <Label
                        Margin="0,0,1,0"
                        FontFamily="Roboto-Bold"
                        Text="Don't have an account?"
                        TextColor="{AppThemeBinding Dark={StaticResource BackGroundColor}, Light={StaticResource BlackColor}}"
                        VerticalOptions="Center">

                            <Label.FontSize>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="16"
                                        Tablet="20" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="18"
                                        Tablet="22" />
                                    </On>
                                </OnPlatform>
                            </Label.FontSize>
                        </Label>

                        <Label
                        Margin="1,0,0,0"
                        FontFamily="Roboto-Bold"
                        Text=" Sign Up"
                        TextColor="{StaticResource PrimaryColor}"
                        VerticalOptions="Center">

                            <Label.FontSize>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="16"
                                        Tablet="20" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="18"
                                        Tablet="22" />
                                    </On>
                                </OnPlatform>
                            </Label.FontSize>
                        </Label>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="SignUpBtn_Clicked" />
                        </StackLayout.GestureRecognizers>

                    </StackLayout>


                </StackLayout>
            </ScrollView>
        </Grid>
       
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EvolveRentals.Views.HomePageDetail"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:context="clr-namespace:ContextMenu.Views;assembly=ContextMenu"
    xmlns:conv="clr-namespace:EvolveRentals.Converters"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:local="clr-namespace:EvolveRentals.MarkupExtensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:renders="clr-namespace:EvolveRentals.Renders"
    xmlns:viewModels="clr-namespace:EvolveRentals.ViewModels"
    BackgroundColor="{AppThemeBinding Dark={StaticResource BlackColor}, Light={StaticResource BackGroundColor}}"
    NavigationPage.HasNavigationBar="False"
    mc:Ignorable="d">
    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:MenuFitWidthConverter x:Key="MenuFitWidthConverter" />
            <conv:IsMutedToTextConverter x:Key="IsMutedToTextConverter" />
            <conv:IsMutedToOpacityConverter x:Key="IsMutedToOpacityConverter" />
            <conv:IsMutedToBackgroundColorConverter x:Key="IsMutedToBackgroundColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <viewModels:BaseItemsViewModel />
    </ContentPage.BindingContext>
    <Grid>
        <RefreshView x:Name="refreshView"
                     RefreshColor="{StaticResource PrimaryColor}">
            <ScrollView>

                <Grid Margin="0,20,0,0" VerticalOptions="FillAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- menu bar and heading-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <Grid.HeightRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                            x:TypeArguments="x:Double"
                            Phone="50"
                            Tablet="60" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                            x:TypeArguments="x:Double"
                            Phone="50"
                            Tablet="60" />
                                </On>
                            </OnPlatform>
                        </Grid.HeightRequest>
                        <ImageButton
                x:Name="btnMenu"
                Margin="0"
                Padding="0"
                BackgroundColor="Transparent"
                Clicked="btnMenu_Clicked"
                HeightRequest="40"
                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconMenu.png}"
                VerticalOptions="CenterAndExpand" />

                        <Label
                Grid.Column="1"
                Margin="0,0,0,0"
                FontAttributes="Bold"
                FontFamily="Roboto-Bold"
                FontSize="Large"
                HorizontalOptions="CenterAndExpand"
                Text="HOME"
                TextColor="{StaticResource PrimaryColor}"
                VerticalOptions="CenterAndExpand" />

                        <ImageButton
                Grid.Column="2"
                BackgroundColor="Transparent"
                HeightRequest="30"
                IsVisible="false"
                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconRedSearch.png}"
                VerticalOptions="CenterAndExpand" />

                    </Grid>


                    <!--Top Tab bar-->
                    <Grid
            Grid.Row="1"
            Margin="10,10,15,0"
            Padding="0"
            BackgroundColor="Transparent"
            ColumnSpacing="0">
                        <Grid.HeightRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                            x:TypeArguments="x:Double"
                            Phone="60"
                            Tablet="60" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                            x:TypeArguments="x:Double"
                            Phone="60"
                            Tablet="60" />
                                </On>
                            </OnPlatform>
                        </Grid.HeightRequest>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button
                x:Name="btnMyRentals"
                Grid.Column="0"
                BackgroundColor="{StaticResource PrimaryColor}"
                Clicked="btnMyRentals_Clicked"
                CornerRadius="5"
                FontFamily="Roboto-Medium"
                HorizontalOptions="FillAndExpand"
                Text="RESERVATIONS"
                TextColor="#ffffff">
                            <Button.HeightRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                x:TypeArguments="x:Double"
                                Phone="50"
                                Tablet="60" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                x:TypeArguments="x:Double"
                                Phone="50"
                                Tablet="60" />
                                    </On>
                                </OnPlatform>
                            </Button.HeightRequest>
                            <Button.FontSize>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                x:TypeArguments="x:Double"
                                Phone="14"
                                Tablet="18" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                x:TypeArguments="x:Double"
                                Phone="16"
                                Tablet="20" />
                                    </On>
                                </OnPlatform>
                            </Button.FontSize>
                        </Button>
                        <Button
                x:Name="btnPastRental"
                Grid.Column="1"
                Margin="0,0,-5,0"
                BackgroundColor="{StaticResource LightGrayColor}"
                Clicked="btnPastRental_Clicked"
                CornerRadius="5"
                FontFamily="Roboto-Medium"
                HorizontalOptions="FillAndExpand"
                Text="RENTALS"
                TextColor="Black">
                            <Button.HeightRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                x:TypeArguments="x:Double"
                                Phone="50"
                                Tablet="60" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                x:TypeArguments="x:Double"
                                Phone="50"
                                Tablet="60" />
                                    </On>
                                </OnPlatform>
                            </Button.HeightRequest>
                            <Button.FontSize>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                x:TypeArguments="x:Double"
                                Phone="14"
                                Tablet="18" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                x:TypeArguments="x:Double"
                                Phone="16"
                                Tablet="20" />
                                    </On>
                                </OnPlatform>
                            </Button.FontSize>
                        </Button>
                    </Grid>

                    
                    
                    <StackLayout
                        x:Name="grdRentals"
                        Grid.Row="2"
                        Margin="10,30"
                        VerticalOptions="Center">

                        <Frame BackgroundColor="{AppThemeBinding Dark={StaticResource GrayColor},Light={StaticResource LightGrayColor}}"
                                           CornerRadius="5"
                                           Padding="5"
                                           HorizontalOptions="Fill"
                                           VerticalOptions="StartAndExpand"
                                           HeightRequest="400"
                               HasShadow="True"
                               BorderColor="{AppThemeBinding Dark={StaticResource GrayColor},Light={StaticResource LightGrayColor}}"
                                           >
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="Transparent" Offset="0.05"/>
                                    <GradientStop Color="{AppThemeBinding Dark={StaticResource GrayColor},Light={StaticResource LightGrayColor}}" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Frame.Background>
                            <Grid>
                                <CarouselView x:Name="reservation_carousel"
                                      IndicatorView="resIndicatorview"
                                       BackgroundColor="Transparent"
                                      IsScrollAnimated="True"
                                      VerticalOptions="StartAndExpand"
                                              IsVisible="false"
                                     >
                                    <CarouselView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid Margin="5,10" Padding="0" VerticalOptions="StartAndExpand" 
                                              IsVisible="{Binding isReservationVisible}">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="45" />
                                                        <RowDefinition Height="120" />
                                                        <RowDefinition Height="160" />
                                                        <RowDefinition Height="50" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="3*" />
                                                        <ColumnDefinition Width="7*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid
                                                    Grid.Row="0"
                                                    Grid.ColumnSpan="2"
                                                    Margin="15,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <StackLayout
                                            Margin="0"
                                            Padding="0"
                                            Orientation="Horizontal"
                                            VerticalOptions="CenterAndExpand">
                                                            <Label
                                                FontFamily="Roboto-Bold"
                                                Text="Res-No: "
                                                TextColor="{AppThemeBinding Dark={StaticResource BackGroundColor}, Light={StaticResource BlackColor}}" >
                                                                <Label.FontSize>
                                                                    <OnPlatform x:TypeArguments="x:Double">
                                                                        <On Platform="iOS">
                                                                            <OnIdiom
                                                                x:TypeArguments="x:Double"
                                                                Phone="16"
                                                                Tablet="20" />
                                                                        </On>
                                                                        <On Platform="Android,Windows">
                                                                            <OnIdiom
                                                                x:TypeArguments="x:Double"
                                                                Phone="14"
                                                                Tablet="18" />
                                                                        </On>
                                                                    </OnPlatform>
                                                                </Label.FontSize>
                                                            </Label>
                                                            <Label
                                                FontFamily="Roboto-Bold"
                                                Text="{Binding ReservationNumber}"
                                                TextColor="{AppThemeBinding Dark={StaticResource BackGroundColor}, Light={StaticResource BlackColor}}" 
                                                VerticalOptions="Center">
                                                                <Label.FontSize>
                                                                    <OnPlatform x:TypeArguments="x:Double">
                                                                        <On Platform="iOS">
                                                                            <OnIdiom
                                                                x:TypeArguments="x:Double"
                                                                Phone="16"
                                                                Tablet="20" />
                                                                        </On>
                                                                        <On Platform="Android,Windows">
                                                                            <OnIdiom
                                                                x:TypeArguments="x:Double"
                                                                Phone="14"
                                                                Tablet="18" />
                                                                        </On>
                                                                    </OnPlatform>
                                                                </Label.FontSize>
                                                            </Label>
                                                        </StackLayout>

                                                        <Button
                                            Grid.Column="1"
                                            Margin="0"
                                            Padding="10,0"
                                            BackgroundColor="Transparent"
                                            BorderColor="{Binding sid, Converter={StaticResource ReservationStatusToColor}}"
                                            BorderWidth="2"
                                            CornerRadius="10"
                                            FontFamily="Roboto-Medium"
                                            HeightRequest="30"
                                            Text="{Binding Status}"
                                            TextColor="{Binding sid, Converter={StaticResource ReservationStatusToColor}}"
                                            VerticalOptions="CenterAndExpand">
                                                            <Button.FontSize>
                                                                <OnPlatform x:TypeArguments="x:Double">
                                                                    <On Platform="iOS">
                                                                        <OnIdiom
                                                            x:TypeArguments="x:Double"
                                                            Phone="13"
                                                            Tablet="16" />
                                                                    </On>
                                                                    <On Platform="Android,Windows">
                                                                        <OnIdiom
                                                            x:TypeArguments="x:Double"
                                                            Phone="14"
                                                            Tablet="18" />
                                                                    </On>
                                                                </OnPlatform>
                                                            </Button.FontSize>
                                                        </Button>
                                                    </Grid>
                                                    <BoxView
                                        Grid.Row="0"
                                        Grid.ColumnSpan="2"
                                        HeightRequest="1"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="EndAndExpand"
                                        Color="{StaticResource GrayColor}" />

                                                    <Grid
                                                IsVisible="false"
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Margin="15,0">
                                                        <StackLayout
                                            Margin="0"
                                            Padding="0"
                                            IsVisible="{Binding isTimerVisible}"
                                            Orientation="Horizontal"
                                            VerticalOptions="CenterAndExpand">
                                                            <Label
                                                FontFamily="Roboto-Bold"
                                                IsVisible="{Binding isTimerVisible}"
                                                Text="Return in : "
                                                TextColor="{StaticResource Black}">
                                                                <Label.FontSize>
                                                                    <OnPlatform x:TypeArguments="x:Double">
                                                                        <On Platform="iOS">
                                                                            <OnIdiom
                                                                x:TypeArguments="x:Double"
                                                                Phone="16"
                                                                Tablet="20" />
                                                                        </On>
                                                                        <On Platform="Android,Windows">
                                                                            <OnIdiom
                                                                x:TypeArguments="x:Double"
                                                                Phone="18"
                                                                Tablet="22" />
                                                                        </On>
                                                                    </OnPlatform>
                                                                </Label.FontSize>
                                                            </Label>
                                                            <Label
                                                FontFamily="Roboto-Bold"
                                                IsVisible="{Binding isTimerVisible}"
                                                Text="01:59:52"
                                                TextColor="{StaticResource PrimaryColorDuplicate}">
                                                                <Label.FontSize>
                                                                    <OnPlatform x:TypeArguments="x:Double">
                                                                        <On Platform="iOS">
                                                                            <OnIdiom
                                                                x:TypeArguments="x:Double"
                                                                Phone="16"
                                                                Tablet="20" />
                                                                        </On>
                                                                        <On Platform="Android,Windows">
                                                                            <OnIdiom
                                                                x:TypeArguments="x:Double"
                                                                Phone="18"
                                                                Tablet="22" />
                                                                        </On>
                                                                    </OnPlatform>
                                                                </Label.FontSize>
                                                            </Label>
                                                        </StackLayout>
                                                    </Grid>

                                                    <Grid
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Margin="15,10"
                                        ColumnSpacing="10"
                                        HeightRequest="120"
                                        RowSpacing="5"
                                        VerticalOptions="FillAndExpand">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="100" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>
                                                        <Frame
                                                             Grid.Row="0"
                                                            Grid.RowSpan="4"
                                                            Padding="0"
                                                            CornerRadius="5">


                                                            <Image
                                                                Margin="0"
                                                                Aspect="AspectFill"
                                                                Source="{Binding VehicleImageUrl}"/>
                                                        </Frame>

                                                        <Label
                                            Grid.Column="1"
                                            Margin="0,0,0,5"
                                            FontAttributes="Bold"
                                            FontFamily="Roboto-Bold"
                                            Text="{Binding VehicleModel}"
                                            TextColor="{StaticResource PrimaryColor}">
                                                            <Label.FontSize>
                                                                <OnPlatform x:TypeArguments="x:Double">
                                                                    <On Platform="iOS">
                                                                        <OnIdiom
                                                            x:TypeArguments="x:Double"
                                                            Phone="16"
                                                            Tablet="20" />
                                                                    </On>
                                                                    <On Platform="Android,Windows">
                                                                        <OnIdiom
                                                            x:TypeArguments="x:Double"
                                                            Phone="18"
                                                            Tablet="22" />
                                                                    </On>
                                                                </OnPlatform>
                                                            </Label.FontSize>
                                                        </Label>

                                                        <StackLayout
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="0"
                                            Padding="0"
                                            Orientation="Horizontal">
                                                            <Label
                                                Margin="0,0,0,5"
                                                FontFamily="Roboto-Medium"
                                                FontSize="Small"
                                                Text="Vehicle Type: "
                                                TextColor="{AppThemeBinding Dark={StaticResource BackGroundColor}, Light={StaticResource BlackColor}}">
                                                                <Label.FontSize>
                                                                    <OnPlatform x:TypeArguments="x:Double">
                                                                        <On Platform="iOS">
                                                                            <OnIdiom
                                                                x:TypeArguments="x:Double"
                                                                Phone="13"
                                                                Tablet="16" />
                                                                        </On>
                                                                        <On Platform="Android,Windows">
                                                                            <OnIdiom
                                                                x:TypeArguments="x:Double"
                                                                Phone="14"
                                                                Tablet="18" />
                                                                        </On>
                                                                    </OnPlatform>
                                                                </Label.FontSize>
                                                            </Label>
                                                            <Label
                                                x:Name="VehicleType"
                                                Margin="0,0,0,5"
                                                FontFamily="Roboto-Medium"
                                                Text="{Binding VehicleTypeName}"
                                                TextColor="{AppThemeBinding Dark={StaticResource BackGroundColor}, Light={StaticResource BlackColor}}">
                                                                <Label.FontSize>
                                                                    <OnPlatform x:TypeArguments="x:Double">
                                                                        <On Platform="iOS">
                                                                            <OnIdiom
                                                                x:TypeArguments="x:Double"
                                                                Phone="13"
                                                                Tablet="16" />
                                                                        </On>
                                                                        <On Platform="Android,Windows">
                                                                            <OnIdiom
                                                                x:TypeArguments="x:Double"
                                                                Phone="14"
                                                                Tablet="18" />
                                                                        </On>
                                                                    </OnPlatform>
                                                                </Label.FontSize>
                                                            </Label>
                                                        </StackLayout>
                                                        <StackLayout
                                                    IsVisible="false"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="0"
                                            Padding="0"
                                            Orientation="Horizontal"
                                            Spacing="15">
                                                            <StackLayout
                                                Grid.Column="0"
                                                Margin="0"
                                                Padding="0"
                                                Orientation="Horizontal"
                                                Spacing="5">
                                                                <Image
                                                    BackgroundColor="Transparent"
                                                    HorizontalOptions="Center"
                                                    Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconGraySeat.png}"
                                                    VerticalOptions="CenterAndExpand">
                                                                    <Image.HeightRequest>
                                                                        <OnPlatform x:TypeArguments="x:Double">
                                                                            <On Platform="iOS">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="10"
                                                                    Tablet="20" />
                                                                            </On>
                                                                            <On Platform="Android,Windows">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="10"
                                                                    Tablet="20" />
                                                                            </On>
                                                                        </OnPlatform>
                                                                    </Image.HeightRequest>
                                                                    <Image.WidthRequest>
                                                                        <OnPlatform x:TypeArguments="x:Double">
                                                                            <On Platform="iOS">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="10"
                                                                    Tablet="20" />
                                                                            </On>
                                                                            <On Platform="Android,Windows">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="10"
                                                                    Tablet="20" />
                                                                            </On>
                                                                        </OnPlatform>
                                                                    </Image.WidthRequest>
                                                                </Image>
                                                                <Label
                                                    FontFamily="Roboto-Medium"
                                                    Text="{Binding vehicleTypeModel.Seats}"
                                                    TextColor="{StaticResource BlackColor}"
                                                    VerticalOptions="CenterAndExpand">
                                                                    <Label.FontSize>
                                                                        <OnPlatform x:TypeArguments="x:Double">
                                                                            <On Platform="iOS">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="12"
                                                                    Tablet="16" />
                                                                            </On>
                                                                            <On Platform="Android,Windows">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="12"
                                                                    Tablet="18" />
                                                                            </On>
                                                                        </OnPlatform>
                                                                    </Label.FontSize>
                                                                </Label>
                                                            </StackLayout>
                                                            <StackLayout
                                                Margin="0"
                                                Padding="0"
                                                Orientation="Horizontal"
                                                Spacing="5">
                                                                <Image
                                                    BackgroundColor="Transparent"
                                                    HorizontalOptions="Center"
                                                    Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconGrayBag.png}"
                                                    VerticalOptions="CenterAndExpand">
                                                                    <Image.HeightRequest>
                                                                        <OnPlatform x:TypeArguments="x:Double">
                                                                            <On Platform="iOS">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="10"
                                                                    Tablet="20" />
                                                                            </On>
                                                                            <On Platform="Android,Windows">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="10"
                                                                    Tablet="20" />
                                                                            </On>
                                                                        </OnPlatform>
                                                                    </Image.HeightRequest>
                                                                    <Image.WidthRequest>
                                                                        <OnPlatform x:TypeArguments="x:Double">
                                                                            <On Platform="iOS">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="10"
                                                                    Tablet="20" />
                                                                            </On>
                                                                            <On Platform="Android,Windows">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="10"
                                                                    Tablet="20" />
                                                                            </On>
                                                                        </OnPlatform>
                                                                    </Image.WidthRequest>
                                                                </Image>
                                                                <Label
                                                    FontFamily="Roboto-Medium"
                                                    Text="{Binding vehicleTypeModel.Baggages}"
                                                    TextColor="{StaticResource BlackColor}"
                                                    VerticalOptions="CenterAndExpand">
                                                                    <Label.FontSize>
                                                                        <OnPlatform x:TypeArguments="x:Double">
                                                                            <On Platform="iOS">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="12"
                                                                    Tablet="16" />
                                                                            </On>
                                                                            <On Platform="Android,Windows">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="12"
                                                                    Tablet="18" />
                                                                            </On>
                                                                        </OnPlatform>
                                                                    </Label.FontSize>
                                                                </Label>
                                                            </StackLayout>
                                                            <StackLayout
                                                Margin="0"
                                                Padding="0"
                                                Orientation="Horizontal"
                                                Spacing="5">
                                                                <Image
                                                    BackgroundColor="Transparent"
                                                    HorizontalOptions="Center"
                                                    Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconGrayFeature.png}"
                                                    VerticalOptions="CenterAndExpand">
                                                                    <Image.HeightRequest>
                                                                        <OnPlatform x:TypeArguments="x:Double">
                                                                            <On Platform="iOS">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="10"
                                                                    Tablet="20" />
                                                                            </On>
                                                                            <On Platform="Android,Windows">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="10"
                                                                    Tablet="20" />
                                                                            </On>
                                                                        </OnPlatform>
                                                                    </Image.HeightRequest>
                                                                    <Image.WidthRequest>
                                                                        <OnPlatform x:TypeArguments="x:Double">
                                                                            <On Platform="iOS">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="10"
                                                                    Tablet="20" />
                                                                            </On>
                                                                            <On Platform="Android,Windows">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="10"
                                                                    Tablet="20" />
                                                                            </On>
                                                                        </OnPlatform>
                                                                    </Image.WidthRequest>
                                                                </Image>
                                                                <Label
                                                    FontFamily="Roboto-Medium"
                                                    Text="{Binding vehicleTypeModel.Transmission}"
                                                    TextColor="{StaticResource BlackColor}"
                                                    VerticalOptions="CenterAndExpand">
                                                                    <Label.FontSize>
                                                                        <OnPlatform x:TypeArguments="x:Double">
                                                                            <On Platform="iOS">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="12"
                                                                    Tablet="16" />
                                                                            </On>
                                                                            <On Platform="Android,Windows">
                                                                                <OnIdiom
                                                                    x:TypeArguments="x:Double"
                                                                    Phone="12"
                                                                    Tablet="18" />
                                                                            </On>
                                                                        </OnPlatform>
                                                                    </Label.FontSize>
                                                                </Label>
                                                            </StackLayout>
                                                        </StackLayout>

                                                        <Label
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="0,0,0,5"
                                            FontAttributes="Bold"
                                            FontFamily="Roboto-Bold"
                                            TextColor="{StaticResource PrimaryColorDuplicate}">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span
                                                        FontAttributes="Bold"
                                                        FontFamily="Roboto-Bold"
                                                        Text="Days: "
                                                        TextColor="{AppThemeBinding Dark={StaticResource BackGroundColor}, Light={StaticResource BlackColor}}">
                                                                        <Span.FontSize>
                                                                            <OnPlatform x:TypeArguments="x:Double">
                                                                                <On Platform="iOS">
                                                                                    <OnIdiom
                                                                x:TypeArguments="x:Double"
                                                                Phone="13"

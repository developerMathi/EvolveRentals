                            Margin="0,20,0,0"
                            HeightRequest="1"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Color="{AppThemeBinding Light={StaticResource BlackColor}, Dark={StaticResource BackGroundColor}}" />

                        <StackLayout
                            Grid.Column="2"
                            Margin="0"
                            Padding="0">
                            <Image Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconSelectBookNow2.png}">
                                <Image.WidthRequest>
                                    <OnPlatform x:TypeArguments="x:Double">
                                        <On Platform="iOS">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="50"
                                                Tablet="60" />
                                        </On>
                                        <On Platform="Android,Windows">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="50"
                                                Tablet="60" />
                                        </On>
                                    </OnPlatform>
                                </Image.WidthRequest>
                            </Image>
                        </StackLayout>
                        <BoxView
                            Grid.Column="3"
                            Margin="0,20,0,0"
                            HeightRequest="1"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Color="{AppThemeBinding Light={StaticResource BlackColor}, Dark={StaticResource BackGroundColor}}" />

                        <StackLayout
                            Grid.Column="4"
                            Margin="0"
                            Padding="0">
                            <Image Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconUnSelectBookNow3.png}">
                                <Image.WidthRequest>
                                    <OnPlatform x:TypeArguments="x:Double">
                                        <On Platform="iOS">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="50"
                                                Tablet="60" />
                                        </On>
                                        <On Platform="Android,Windows">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="50"
                                                Tablet="60" />
                                        </On>
                                    </OnPlatform>
                                </Image.WidthRequest>
                            </Image>
                        </StackLayout>

                        <BoxView
                            Grid.Column="5"
                            Margin="0,20,0,0"
                            HeightRequest="1"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand"
                            Color="{AppThemeBinding Light={StaticResource BlackColor}, Dark={StaticResource BackGroundColor}}" />

                        <StackLayout
                            Grid.Column="6"
                            Margin="0"
                            Padding="0">
                            <Image Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconUnSelectBookNow4.png}">
                                <Image.WidthRequest>
                                    <OnPlatform x:TypeArguments="x:Double">
                                        <On Platform="iOS">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="50"
                                                Tablet="60" />
                                        </On>
                                        <On Platform="Android,Windows">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="50"
                                                Tablet="60" />
                                        </On>
                                    </OnPlatform>
                                </Image.WidthRequest>
                            </Image>
                        </StackLayout>



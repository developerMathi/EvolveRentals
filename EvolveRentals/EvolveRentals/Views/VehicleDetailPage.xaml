                    </Grid>


                    <Grid Grid.Row="2" VerticalOptions="FillAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label
                            Margin="0,0,0,5"
                            FontAttributes="Bold"
                            FontFamily="Roboto-Bold"
                            HorizontalOptions="CenterAndExpand"
                            Text="Book now - Vehicle details"
                            TextColor="{StaticResource PrimaryColor}">
                            <Label.FontSize>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="20"
                                            Tablet="24" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="22"
                                            Tablet="26" />
                                    </On>
                                </OnPlatform>
                            </Label.FontSize>
                        </Label>
                        <Grid
                            IsVisible="false"
                            Grid.Row="1"
                            BackgroundColor="{StaticResource LightGrayColor}"
                            VerticalOptions="CenterAndExpand">
                            <Grid.HeightRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="40"
                                            Tablet="50" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="40"
                                            Tablet="50" />
                                    </On>
                                </OnPlatform>
                            </Grid.HeightRequest>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="9*" />
                            </Grid.ColumnDefinitions>

                            <Image
                                Margin="10,0,0,0"
                                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconBlackLocation.png}"
                                VerticalOptions="CenterAndExpand" />

                            <Label
                                x:Name="lblLocation"
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                FontFamily="Roboto-Medium"
                                FontSize="Medium"
                                Text="Location Name"
                                TextColor="{StaticResource BlackColor}"
                                VerticalOptions="CenterAndExpand">
                                <Label.FontSize>
                                    <OnPlatform x:TypeArguments="x:Double">
                                        <On Platform="iOS">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="16"
                                                Tablet="22" />
                                        </On>
                                        <On Platform="Android,Windows">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="18"
                                                Tablet="22" />
                                        </On>
                                    </OnPlatform>
                                </Label.FontSize>
                            </Label>
                        </Grid>
                        <Grid 
                            Grid.Row="2"
                            Padding="0,10,0,-5"
                            BackgroundColor="{AppThemeBinding Light={StaticResource LightGrayColor},Dark={StaticResource GrayColor}}"
                            ColumnSpacing="10"
                            VerticalOptions="CenterAndExpand">
                            <Grid.HeightRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="50"
                                            Tablet="60" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="50"
                                            Tablet="60" />
                                    </On>
                                </OnPlatform>
                            </Grid.HeightRequest>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <StackLayout
                                Margin="10,0,0,0"
                                Padding="0"
                                Orientation="Horizontal"
                                Spacing="2">
                                <Label
                                    FontAttributes="Bold"
                                    FontFamily="Roboto-Black"
                                    FontSize="12"
                                    Text="Start Date :"
                                    TextColor="{AppThemeBinding Light={StaticResource BlackColor}, Dark={StaticResource BackGroundColor}}">

                                    <Label.FontSize>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                        </OnPlatform>
                                    </Label.FontSize>
                                </Label>
                                <Label
                                    x:Name="startDateLabel"
                                    FontFamily="Roboto-Medium"
                                    TextColor="{AppThemeBinding Light={StaticResource BlackColor}, Dark={StaticResource BackGroundColor}}">
                                    <Label.FontSize>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                        </OnPlatform>
                                    </Label.FontSize>
                                </Label>
                            </StackLayout>
                            <StackLayout
                                Grid.Row="1"
                                Margin="10,0,0,0"
                                Padding="0"
                                Orientation="Horizontal"
                                Spacing="2">
                                <Label
                                    FontAttributes="Bold"
                                    FontFamily="Roboto-Black"
                                    TextColor="{AppThemeBinding Light={StaticResource BlackColor}, Dark={StaticResource BackGroundColor}}">
                                    Start Time :
                                    <Label.FontSize>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                        </OnPlatform>
                                    </Label.FontSize>
                                </Label>
                                <Label
                                    x:Name="startTimeLabel"
                                    FontFamily="Roboto-Medium"
                                    TextColor="{AppThemeBinding Light={StaticResource BlackColor}, Dark={StaticResource BackGroundColor}}">
                                    <Label.FontSize>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                        </OnPlatform>
                                    </Label.FontSize>
                                </Label>
                            </StackLayout>

                            <StackLayout
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                Padding="0"
                                HorizontalOptions="StartAndExpand"
                                Orientation="Horizontal"
                                Spacing="2">
                                <Label
                                    FontAttributes="Bold"
                                    FontFamily="Roboto-Black"
                                    TextColor="{AppThemeBinding Light={StaticResource BlackColor}, Dark={StaticResource BackGroundColor}}">
                                    End Date :
                                    <Label.FontSize>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                        </OnPlatform>
                                    </Label.FontSize>
                                </Label>
                                <Label
                                    x:Name="endDateLabel"
                                    FontFamily="Roboto-Medium"
                                    FontSize="12"
                                    TextColor="{AppThemeBinding Light={StaticResource BlackColor}, Dark={StaticResource BackGroundColor}}">
                                    <Label.FontSize>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                        </OnPlatform>
                                    </Label.FontSize>
                                </Label>
                            </StackLayout>
                            <StackLayout
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                Padding="0"
                                HorizontalOptions="StartAndExpand"
                                Orientation="Horizontal"
                                Spacing="2">
                                <Label
                                    FontAttributes="Bold"
                                    FontFamily="Roboto-Black"
                                    FontSize="12"
                                    TextColor="{AppThemeBinding Light={StaticResource BlackColor}, Dark={StaticResource BackGroundColor}}">
                                    End Time :
                                    <Label.FontSize>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                        </OnPlatform>
                                    </Label.FontSize>
                                </Label>
                                <Label
                                    x:Name="endTimeLabel"
                                    FontFamily="Roboto-Medium"
                                    TextColor="{AppThemeBinding Light={StaticResource BlackColor}, Dark={StaticResource BackGroundColor}}">
                                    <Label.FontSize>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="iOS">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                            </On>
                                        </OnPlatform>
                                    </Label.FontSize>
                                </Label>
                            </StackLayout>



                        </Grid>
                        <Grid Grid.Row="3" Margin="15,10,15,0">
                            <StackLayout VerticalOptions="CenterAndExpand">
                                <ListView
                                    x:Name="vehicleDetailList"
                                    Margin="0,10,0,10"
                                    IsPullToRefreshEnabled="True"
                                    RefreshControlColor="{StaticResource PrimaryColor}"
                                    Refreshing="VehicleDetailList_Refreshing"
                                    RowHeight="260"
                                    SeparatorColor="{StaticResource PrimaryColor}"
                                    SeparatorVisibility="None"
                                    VerticalScrollBarVisibility="Never"
                                    ItemSelected="vehicleDetailList_ItemSelected">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <renders:ExtendedViewCell SelectedBackgroundColor="{AppThemeBinding Dark={StaticResource BlackColor}, Light={StaticResource BackGroundColor}}" >
                                                <Grid Margin="0,0,0,12">
                                                    <Frame HasShadow="False"
                                                        Padding="0"
                                                        BackgroundColor="{AppThemeBinding Light={StaticResource LightGrayColor}, Dark={StaticResource Black}}"
                                                        CornerRadius="10"
                                                           BorderColor="{AppThemeBinding Light={StaticResource BlackColor},Dark={StaticResource GrayColor}}"
                                                        IsClippedToBounds="True">
                                                        <Frame.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="Transparent" Offset="0.7"/>
                                                                <GradientStop Color="{AppThemeBinding Dark={StaticResource GrayColor},Light={StaticResource LightGrayColor}}" Offset="1.0"/>
                                                            </LinearGradientBrush>
                                                        </Frame.Background>
                                                        <Grid RowSpacing="10">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" />
                                                            </Grid.RowDefinitions>
                                                            <Grid Grid.Row="1" Margin="10,0">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <Label
                                                                    FontFamily="Roboto-Bold"
                                                                    Text="{Binding vehicleName}"
                                                                    TextColor="{StaticResource PrimaryColor}">
                                                                    <Label.FontSize>
                                                                        <OnPlatform x:TypeArguments="x:Double">
                                                                            <On Platform="iOS">
                                                                                <OnIdiom
                                                                                    x:TypeArguments="x:Double"
                                                                                    Phone="16"
                                                                                    Tablet="20" />
                                                                            </On>
                                                                            <On Platform="Android,Windows">
                                                                                <OnIdiom
                                                                                    x:TypeArguments="x:Double"
                                                                                    Phone="18"
                                                                                    Tablet="22" />
                                                                            </On>
                                                                        </OnPlatform>
                                                                    </Label.FontSize>
                                                                </Label>

                                                                <Label
                                                                    IsVisible="false"
                                                                    FontFamily="Roboto-Bold"
                                                                    Text="{Binding VehicleType}"
                                                                    TextColor="{StaticResource BlackColor}"
                                                                    VerticalOptions="Start">
                                                                    <Label.FontSize>
                                                                        <OnPlatform x:TypeArguments="x:Double">
                                                                            <On Platform="iOS">
                                                                                <OnIdiom
                                                                                    x:TypeArguments="x:Double"
                                                                                    Phone="16"
                                                                                    Tablet="20" />
                                                                            </On>
                                                                            <On Platform="Android,Windows">
                                                                                <OnIdiom
                                                                                    x:TypeArguments="x:Double"
                                                                                    Phone="18"
                                                                                    Tablet="22" />
                                                                            </On>
                                                                        </OnPlatform>
                                                                    </Label.FontSize>
                                                                </Label>
                                                            </Grid>


                                                            <Frame Grid.Row="0"
                                                                   CornerRadius="10"
                                                                   Padding="5"
                                                                Margin="0"
                                                                HeightRequest="160"
                                                                HorizontalOptions="FillAndExpand"
                                                                   BorderColor="{AppThemeBinding Light={StaticResource BlackColor},Dark={StaticResource GrayColor}}"
                                                                   HasShadow="False"
                                                                   IsClippedToBounds="True">
                                                                <Image
                                                                    Source="{Binding VehicleTypeImageUrl}"
                                                                    VerticalOptions="FillAndExpand"
                                                                   BackgroundColor="Transparent"
                                                                    Aspect="AspectFill"
                                                                    Margin="0"
                                                                    />
                                                            </Frame>
                                                           

                                                            <Grid Grid.Row="2" Margin="10,0,10,10">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <StackLayout Orientation="Horizontal"  Grid.Column="1" VerticalOptions="Center">
                                                                    <Label
                                                                        Margin="0"
                                                                        FontFamily="Roboto-Bold"
                                                                        Text="$"
                                                                        TextColor="{StaticResource PrimaryColor}"
                                                                        VerticalOptions="Center">
                                                                        <Label.FontSize>
                                                                            <OnPlatform x:TypeArguments="x:Double">
                                                                                <On Platform="iOS">
                                                                                    <OnIdiom
                                                                                    x:TypeArguments="x:Double"
                                                                                    Phone="16"
                                                                                    Tablet="20" />
                                                                                </On>
                                                                                <On Platform="Android,Windows">
                                                                                    <OnIdiom
                                                                                    x:TypeArguments="x:Double"
                                                                                    Phone="18"
                                                                                    Tablet="22" />
                                                                                </On>
                                                                            </OnPlatform>
                                                                        </Label.FontSize>
                                                                    </Label>
                                                                    <Label
                                                                        Margin="0"
                                                                        FontFamily="Roboto-Bold"
                                                                        Text="{Binding DailyRate}"
                                                                        TextColor="{StaticResource PrimaryColor}"
                                                                        VerticalOptions="Center">
                                                                        <Label.FontSize>
                                                                            <OnPlatform x:TypeArguments="x:Double">
                                                                                <On Platform="iOS">
                                                                                    <OnIdiom
                                                                                    x:TypeArguments="x:Double"
                                                                                    Phone="16"
                                                                                    Tablet="20" />
                                                                                </On>
                                                                                <On Platform="Android,Windows">
                                                                                    <OnIdiom
                                                                                    x:TypeArguments="x:Double"
                                                                                    Phone="18"
                                                                                    Tablet="22" />
                                                                                </On>

                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Label
                            Margin="0,0,0,5"
                            FontAttributes="Bold"
                            FontFamily="Roboto-Bold"
                            HorizontalOptions="CenterAndExpand"
                            Text="Vehicle Rates"
                            TextColor="{StaticResource PrimaryColor}">
                                <Label.FontSize>
                                    <OnPlatform x:TypeArguments="x:Double">
                                        <On Platform="iOS">
                                            <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="20"
                                            Tablet="24" />

                                                    <On Platform="iOS">
                                                        <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="30"
                                                    Tablet="40" />
                                                    </On>
                                                    <On Platform="Android,Windows">
                                                        <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="30"
                                                    Tablet="40" />
                                                    </On>
                                                </OnPlatform>
                                            </Button.HeightRequest>

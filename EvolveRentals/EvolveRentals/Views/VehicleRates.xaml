                                        <Label
                                    x:Name="priceLabel"
                                    Margin="0"
                                    FontAttributes="Bold"
                                    FontFamily="Roboto-Bold"
                                    TextColor="{StaticResource PrimaryColor}">
                                            <Label.FontSize>
                                                <OnPlatform x:TypeArguments="x:Double">
                                                    <On Platform="iOS">
                                                        <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="16"
                                                    Tablet="20" />
                                                    </On>
                                                    <On Platform="Android,Windows">
                                                        <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="18"
                                                    Tablet="22" />
                                                    </On>
                                                </OnPlatform>
                                            </Label.FontSize>
                                        </Label>

                                        <Button
                                    Padding="10,5,10,5"
                                    BackgroundColor="{StaticResource PrimaryColor}"
                                    CornerRadius="10"
                                    HorizontalOptions="EndAndExpand"
                                    Text="Selected"
                                    TextColor="White">
                                            <Button.FontSize>
                                                <OnPlatform x:TypeArguments="x:Double">
                                                    <On Platform="iOS">
                                                        <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="16"
                                                    Tablet="20" />

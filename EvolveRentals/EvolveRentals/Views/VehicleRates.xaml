                                    </OnPlatform>
                                </Frame.Margin>
                                <Frame.HeightRequest>
                                    <OnPlatform x:TypeArguments="x:Double">
                                        <On Platform="iOS">
                                            <OnIdiom
                                        x:TypeArguments="x:Double"

                                                <On Platform="iOS">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                                </On>
                                                <On Platform="Android,Windows">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                                </On>
                                            </OnPlatform>
                                        </Label.FontSize>
                                    </Label>
                                </StackLayout>
                                <StackLayout
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                Padding="0"
                                HorizontalOptions="StartAndExpand"
                                Orientation="Horizontal"
                                Spacing="2"
                                VerticalOptions="CenterAndExpand">
                                    <Label

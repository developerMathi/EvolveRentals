                                                </On>
                                                <On Platform="Android,Windows">
                                                    <OnIdiom
                                                    x:TypeArguments="x:Double"
                                                    Phone="12"
                                                    Tablet="16" />
                                                </On>
                                            </OnPlatform>
                                        </Label.FontSize>

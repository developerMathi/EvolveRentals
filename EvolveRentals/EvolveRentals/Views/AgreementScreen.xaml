                                            <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="18"
                                            Tablet="22" />
                                        </On>
                                    </OnPlatform>
                                </input:CheckBox.TextFontSize>
                            </input:CheckBox>
                            <!--<StackLayout.GestureRecognizers>
                                <TapGestureRecognizer
                                    x:Name="btnSign"
                                    NumberOfTapsRequired="1"
                                    Tapped="btnSign_Tapped" />

                            </StackLayout.GestureRecognizers>-->

                            <BoxView
                            Grid.Row="23"
                            Grid.ColumnSpan="2"
                            HeightRequest="1"
                            VerticalOptions="EndAndExpand"
                            Color="{StaticResource GrayColor}" />

                            <Button
                            x:Name="VechileBtn"
                            Grid.Row="24"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="15,0"
                             BackgroundColor="{StaticResource PrimaryColor}"
                    BorderColor="{StaticResource PrimaryColor}"
                    CornerRadius="5"
                                BorderWidth="2"
                            Clicked="VechileBtn_Clicked"
                            FontFamily="Roboto-Bold"
                            HeightRequest="50"
                            Text="VEHICLE INSPECTIOM"
                            TextColor="{StaticResource BlackColor}" />

                            <Grid
                            Grid.Row="25"
                            Grid.Column="0"
                            Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>


                                <Frame
                                x:Name="signatureFrame"
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="15,0"
                                    Padding="0"
                                BorderColor="{StaticResource BlackColor}"
                                CornerRadius="10"
                                HasShadow="False"
                                HeightRequest="150"
                                IsVisible="False"
                                VerticalOptions="FillAndExpand">
                                    <controls:SignaturePadView
                                    x:Name="signatureView"
                                    Margin="0,0"
                                   BackgroundColor="White"
                                    CaptionTextColor="{StaticResource BlackColor}"
                                    ClearTextColor="White"
                                    VerticalOptions="FillAndExpand"
                                    HorizontalOptions="FillAndExpand"
                                   PromptTextColor="White"
                                    StrokeColor="Black"
                                    StrokeWidth="1" />
                                </Frame>

                                <Grid
                                x:Name="signatureGrid"
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="15,0"
                                ColumnSpacing="10"
                                IsVisible="False">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Button
                                    x:Name="btnClear"
                                    BackgroundColor="LightGray"
                                    Clicked="btnClear_Clicked"
                                    CornerRadius="10"
                                    HeightRequest="50"
                                    HorizontalOptions="FillAndExpand"
                                    Text="Clear"
                                    TextColor="White"
                                    VerticalOptions="CenterAndExpand" />

                                    <Button
                                    x:Name="saveSignatureBtn"
                                    Grid.Column="1"
                                    BackgroundColor="{StaticResource frmGreen}"
                                    Clicked="saveSignatureBtn_Clicked"
                                    CornerRadius="10"
                                    HeightRequest="50"
                                    HorizontalOptions="FillAndExpand"
                                    Text="Save"
                                    TextColor="White"
                                    VerticalOptions="CenterAndExpand" />
                                </Grid>

                            </Grid>

                            <Frame
                            x:Name="imageFrame"
                            Grid.Row="25"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="15,0"
                            Padding="3"
                            BackgroundColor="Transparent"
                            BorderColor="{StaticResource PrimaryColor}"
                            CornerRadius="5"
                            IsVisible="False">
                                <Image
                                x:Name="signatureImage"
                                Margin="5,5,5,5"
                                BackgroundColor="{StaticResource BackGroundColor}"
                                HeightRequest="120"
                                IsVisible="true" />

                            </Frame>


                            <Frame
                            x:Name="noSignatureFrame"
                            Grid.Row="25"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="15,0"
                            Padding="3"
                            BackgroundColor="Transparent"
                            BorderColor="{StaticResource PrimaryColor}"
                            CornerRadius="5"
                            HeightRequest="120"
                            IsVisible="False">
                                <Label
                                FontAttributes="Bold"
                                FontFamily="Roboto-Bold"
                                HorizontalOptions="Center"
                                TextColor="{StaticResource PrimaryColor}"
                                VerticalOptions="Center">
                                    No signature images.
                                </Label>
                            </Frame>


                            <Button
                            x:Name="ExtendBtn"
                            Grid.Row="26"
                            Grid.ColumnSpan="2"
                            Margin="15,0,15,15"
                              BackgroundColor="{StaticResource PrimaryColor}"
                    BorderColor="{StaticResource PrimaryColor}"
                    CornerRadius="5"
                                BorderWidth="2"
                            Clicked="ExtendBtn_Clicked"
                            FontFamily="Roboto-Bold"
                            HeightRequest="45"
                            IsVisible="false"
                            Text="EXTEND RENTAL"
                            TextColor="{StaticResource BlackColor}" />
                        </Grid>
                    </Grid>


                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
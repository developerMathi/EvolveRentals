                                            </On>
                                            <On Platform="Android,Windows">
                                                <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="50"
                                                Tablet="60" />
                                            </On>
                                        </OnPlatform>
                                    </Frame.HeightRequest>
                                    <Grid>
                                        <Grid.ColumnDefinitions>

                                            <ColumnDefinition Width="9*" />
                                            <ColumnDefinition Width="30" />

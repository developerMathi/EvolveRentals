                                        HeightRequest="15"
                                        HorizontalOptions="FillAndExpand"
                                        Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconLDate.png}"
                                        VerticalOptions="FillAndExpand"
                                        WidthRequest="15" />-->

                                        <renders:BorderlessDatePicker
                                        x:Name="pickUpDate"
                                        Grid.Column="0"
                                        Margin="10,0,0,0"

                    Margin="0"
                    Padding="0">
                        <Image Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconUnSelectBookNow4.png}">
                            <Image.WidthRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="50"
                                        Tablet="60" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom

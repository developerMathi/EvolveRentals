                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="15,0,0,0"
                        Aspect="AspectFit"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconCircleSelected.png}"
                        VerticalOptions="CenterAndExpand"
                        IsVisible="false">
                        <Image.HeightRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom

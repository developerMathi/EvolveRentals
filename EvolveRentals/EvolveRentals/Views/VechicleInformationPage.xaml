                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                            </OnPlatform>
                        </Image.WidthRequest>
                    </Image>
                    <Label
                        x:Name="doorCountLabel"
                        Grid.Row="1"
                        Grid.Column="3"
                        FontFamily="Roboto-Medium"
                        HorizontalTextAlignment="Center"

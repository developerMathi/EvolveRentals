                        TextColor="{StaticResource BlackColor}"
                        VerticalOptions="CenterAndExpand">
                        <Label.FontSize>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="13"
                                        Tablet="16" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="14"
                                        Tablet="18" />
                                </On>
                            </OnPlatform>
                        </Label.FontSize>
                    </Label>

                    <Image
                        Grid.Row="2"
                        Grid.Column="1"
                        Aspect="AspectFit"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconRedBluetooth.png}"
                        VerticalOptions="CenterAndExpand">
                        <Image.HeightRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                            </OnPlatform>
                        </Image.HeightRequest>
                        <Image.WidthRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                            </OnPlatform>
                        </Image.WidthRequest>
                    </Image>
                    <Label
                        Grid.Row="3"
                        Grid.Column="1"
                        FontFamily="Roboto-Medium"
                        HorizontalTextAlignment="Center"
                        Text="Bluetooth"
                        TextColor="{StaticResource BlackColor}"
                        VerticalOptions="CenterAndExpand">
                        <Label.FontSize>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="13"
                                        Tablet="16" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="14"
                                        Tablet="18" />
                                </On>
                            </OnPlatform>
                        </Label.FontSize>
                    </Label>

                    <Image
                        Grid.Row="2"
                        Grid.Column="2"
                        Aspect="AspectFit"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconRedCamera.png}"
                        VerticalOptions="CenterAndExpand">
                        <Image.HeightRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                            </OnPlatform>
                        </Image.HeightRequest>
                        <Image.WidthRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                            </OnPlatform>
                        </Image.WidthRequest>
                    </Image>
                    <Label
                        Grid.Row="3"
                        Grid.Column="2"
                        FontFamily="Roboto-Medium"
                        HorizontalTextAlignment="Center"
                        Text="Backup Camera"
                        TextColor="{StaticResource BlackColor}"
                        VerticalOptions="CenterAndExpand">
                        <Label.FontSize>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="13"
                                        Tablet="16" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="14"
                                        Tablet="18" />
                                </On>
                            </OnPlatform>
                        </Label.FontSize>
                    </Label>
                </Grid>

                <Label
                    Grid.Row="3"
                    Margin="15,0"
                    FontFamily="Roboto-Bold"
                    Text="Rental Details"
                    TextColor="{StaticResource BlackColor}"
                    VerticalOptions="Start">
                    <Label.FontSize>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On Platform="iOS">
                                <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="17"
                                    Tablet="20" />
                            </On>
                            <On Platform="Android,Windows">
                                <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="18"
                                    Tablet="22" />
                            </On>
                        </OnPlatform>
                    </Label.FontSize>
                </Label>

                <Grid
                    Grid.Row="4"
                    Margin="0,10,0,0"
                    ColumnSpacing="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="55" />
                        <RowDefinition Height="55" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="9*" />
                    </Grid.ColumnDefinitions>

                    <!--  Row 1  -->
                    <BoxView
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HeightRequest="1"
                        VerticalOptions="StartAndExpand"
                        Color="{StaticResource GrayColor}" />
                    <Image
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="15,0,0,0"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconLState.png}"
                        VerticalOptions="CenterAndExpand">
                        <Image.HeightRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                            </OnPlatform>
                        </Image.HeightRequest>
                        <Image.WidthRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                            </OnPlatform>
                        </Image.WidthRequest>
                    </Image>
                    <Label
                        x:Name="loactionLabel"
                        Grid.Column="1"
                        Margin="0,0,15,0"
                        FontFamily="Roboto-Bold"
                        FontSize="Medium"
                        TextColor="{StaticResource BlackColor}"
                        VerticalOptions="Center" />
                    <BoxView
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HeightRequest="1"
                        VerticalOptions="EndAndExpand"
                        Color="{StaticResource GrayColor}" />

                    <!--  Row 2  -->
                    <Image
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="15,0,0,0"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconResDt.png}"
                        VerticalOptions="CenterAndExpand">
                        <Image.HeightRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="20"
                                        Tablet="30" />
                                </On>
                            </OnPlatform>
                        </Image.HeightRequest>
                        <Image.WidthRequest>

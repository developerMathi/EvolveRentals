        <Grid>
            <Image
                Aspect="Fill"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <Image.Source>
                    <OnPlatform x:TypeArguments="ImageSource">
                        <On Platform="iOS">
                            <OnIdiom
                                x:TypeArguments="ImageSource"
                                Phone="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.BgHomeScreen.png}"
                                Tablet="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.bgHomeTablet.png}" />
                        </On>
                        <On Platform="Android,Windows">
                            <OnIdiom
                                x:TypeArguments="ImageSource"
                                Phone="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.BgHomeScreen.png}"
                                Tablet="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.bgHomeTablet.png}" />
                        </On>
                    </OnPlatform>
                </Image.Source>
            </Image>
            <ScrollView>
                <Grid
                    Margin="20,0,20,20"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Fill">

                    <Image
                        x:Name="logoImage"
                        Margin="30,50,10,30"
                        Aspect="AspectFit"
                        HeightRequest="120"
                        HorizontalOptions="FillAndExpand"
                        Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconLogo.png}"
                        VerticalOptions="StartAndExpand" />
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Button
                            x:Name="BooknowBtn"
                            Grid.Row="1"
                            Margin="0,0,0,0"
                            BackgroundColor="{StaticResource PrimaryColorDuplicate}"
                            BorderWidth="0"
                            Clicked="BooknowBtn_Clicked"
                            CornerRadius="10"
                            FontFamily="Roboto-Medium"
                            HeightRequest="50"
                            HorizontalOptions="FillAndExpand"
                            StyleClass="bouncy"
                            Text="BOOK NOW"
                            TextColor="{StaticResource BackGroundColor}"
                            VerticalOptions="End">
                            <Button.FontSize>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="14"
                                            Tablet="18" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="16"
                                            Tablet="20" />
                                    </On>
                                </OnPlatform>
                            </Button.FontSize>
                            <Button.HeightRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="50"
                                            Tablet="60" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="50"
                                            Tablet="60" />
                                    </On>
                                </OnPlatform>
                            </Button.HeightRequest>
                        </Button>

                        <Frame
                            x:Name="bookNowLoader"
                            Grid.Row="1"
                            Margin="0,0,0,0"
                            Padding="0"
                            BackgroundColor="{StaticResource PrimaryColorDuplicate}"
                            CornerRadius="10"
                            HasShadow="False"
                            IsVisible="False"
                            VerticalOptions="End">
                            <ActivityIndicator
                                x:Name="bookNowSpinner"
                                HeightRequest="30"
                                HorizontalOptions="Center"
                                IsRunning="False"
                                VerticalOptions="Center"
                                Color="{StaticResource BackGroundColor}" />
                            <Frame.HeightRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="50"
                                            Tablet="60" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="50"
                                            Tablet="60" />
                                    </On>
                                </OnPlatform>
                            </Frame.HeightRequest>
                        </Frame>


                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>


                            <Button
                                x:Name="btnSignup"
                                Grid.Column="0"
                                Margin="0,10,0,0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource BackGroundColor}"
                                BorderWidth="2"
                                Clicked="btnSignup_Clicked"
                                CornerRadius="10"
                                FontFamily="Roboto-Medium"
                                StyleClass="bouncy"
                                Text="Signup"
                                TextColor="{StaticResource BackGroundColor}"
                                VerticalOptions="End">
                                <Button.FontSize>
                                    <OnPlatform x:TypeArguments="x:Double">
                                        <On Platform="iOS">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="14"
                                                Tablet="18" />
                                        </On>
                                        <On Platform="Android,Windows">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="16"
                                                Tablet="20" />
                                        </On>
                                    </OnPlatform>
                                </Button.FontSize>
                                <Button.HeightRequest>
                                    <OnPlatform x:TypeArguments="x:Double">
                                        <On Platform="iOS">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="50"
                                                Tablet="60" />
                                        </On>
                                        <On Platform="Android,Windows">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="50"
                                                Tablet="60" />
                                        </On>
                                    </OnPlatform>
                                </Button.HeightRequest>
                            </Button>

                            <Button
                                x:Name="HomeBtn"
                                Grid.Column="1"
                                Margin="0,10,0,0"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource BackGroundColor}"
                                BorderWidth="2"
                                Clicked="HomeBtn_Clicked"
                                CornerRadius="10"
                                FontFamily="Roboto-Medium"
                                StyleClass="bouncy"
                                Text="Login"
                                TextColor="{StaticResource BackGroundColor}"
                                VerticalOptions="End">
                                <Button.FontSize>
                                    <OnPlatform x:TypeArguments="x:Double">
                                        <On Platform="iOS">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="14"
                                                Tablet="18" />
                                        </On>
                                        <On Platform="Android,Windows">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="16"
                                                Tablet="20" />
                                        </On>
                                    </OnPlatform>
                                </Button.FontSize>
                                <Button.HeightRequest>
                                    <OnPlatform x:TypeArguments="x:Double">
                                        <On Platform="iOS">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="50"
                                                Tablet="60" />
                                        </On>
                                        <On Platform="Android,Windows">
                                            <OnIdiom
                                                x:TypeArguments="x:Double"
                                                Phone="50"
                                                Tablet="60" />
                                        </On>
                                    </OnPlatform>
                                </Button.HeightRequest>
                            </Button>

                        </Grid>

                        <Button
                            x:Name="forgetPasswordBtn"
                            Grid.Row="3"
                            Margin="0,10,0,0"
                            BackgroundColor="Transparent"
                            BorderColor="{StaticResource BackGroundColor}"
                            BorderWidth="2"
                            Clicked="forgetPasswordBtn_Clicked"
                            CornerRadius="10"
                            FontFamily="Roboto-Medium"
                            HorizontalOptions="FillAndExpand"
                            StyleClass="bouncy"
                            Text="Forgot Password"
                            TextColor="{StaticResource BackGroundColor}"
                            VerticalOptions="End">
                            <Button.FontSize>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="14"
                                            Tablet="18" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="16"
                                            Tablet="20" />
                                    </On>
                                </OnPlatform>
                            </Button.FontSize>
                            <Button.HeightRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="50"
                                            Tablet="60" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                            x:TypeArguments="x:Double"
                                            Phone="50"
                                            Tablet="60" />
                                    </On>
                                </OnPlatform>
                            </Button.HeightRequest>
                        </Button>
                    </Grid>
                </Grid>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:renders="clr-namespace:EvolveRentals.Renders"
             xmlns:local="clr-namespace:EvolveRentals.MarkupExtensions"
             mc:Ignorable="d"
             x:Class="EvolveRentals.Views.EditBookNow"
             NavigationPage.HasBackButton="False"
             BackgroundColor="{StaticResource BackGroundColor}"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
            ios:Page.UseSafeArea="True">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Login" 
                     Clicked="ToolbarItem_Clicked" 
                     x:Name="loginIcon"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>


        <StackLayout>

            <Grid Margin="10,1,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <Frame HeightRequest="40"
                       WidthRequest="40"
                       CornerRadius="40"
                       BorderColor="{StaticResource PrimaryColor}"
                       Grid.Row="0"
                       Grid.Column="1"
                       Padding="0"
                       BackgroundColor="{StaticResource PrimaryColor}"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="CenterAndExpand">
                    <Label Grid.Row="0"
                           Grid.Column="1"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource BackGroundColor}">1</Label>
                </Frame>
                <Frame HeightRequest="40"
                       WidthRequest="40"
                       CornerRadius="40"
                       BorderColor="{StaticResource PrimaryColor}"
                       Grid.Row="0"
                       Grid.Column="3"
                       Padding="0"
                       BackgroundColor="Transparent"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="CenterAndExpand">
                    <Label Grid.Row="0"
                           Grid.Column="3"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource BlackColor}">2</Label>
                </Frame>

                <Frame HeightRequest="40"
                       WidthRequest="40"
                       CornerRadius="40"
                       BorderColor="{StaticResource PrimaryColor}"
                       Grid.Row="0"
                       Grid.Column="5"
                       Padding="0"
                       BackgroundColor="Transparent"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="CenterAndExpand">
                    <Label Grid.Row="0"
                           Grid.Column="5"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource BlackColor}">3</Label>
                </Frame>

                <Frame HeightRequest="40"
                       WidthRequest="40"
                       CornerRadius="40"
                       BorderColor="{StaticResource PrimaryColor}"
                       Grid.Row="0"
                       Grid.Column="7"
                       Padding="0"
                       BackgroundColor="Transparent"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="CenterAndExpand">
                    <Label Grid.Row="0"
                           Grid.Column="5"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource BlackColor}">4</Label>
                </Frame>


            </Grid>

            <StackLayout VerticalOptions="CenterAndExpand">

                <Label Text="Edit Book Now"
                        VerticalOptions="Start" 
                        HorizontalOptions="CenterAndExpand"
                       FontSize="Subtitle"
                       FontAttributes="Bold"
                       TextColor="{StaticResource BlackColor}"
                   Margin="0,0,0,30"/>
                <ScrollView Margin="20,0,20,0">
                    <StackLayout>


                        <Grid RowSpacing="10" >


                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="9*"/>
                            </Grid.ColumnDefinitions>
                            <Frame BackgroundColor="Transparent"
                           BorderColor="{StaticResource PrimaryColor}"
                           Grid.Row="1"
                           Grid.Column="1"
                           Padding="0,0,0,0"
                           CornerRadius="10"></Frame>
                            <Frame BackgroundColor="Transparent"
                           BorderColor="{StaticResource PrimaryColor}"
                           Grid.Row="7"
                           Grid.Column="1"
                           Padding="0,0,0,0"
                           CornerRadius="10"></Frame>
                            <Frame BackgroundColor="Transparent"
                           BorderColor="{StaticResource PrimaryColor}"
                           Grid.Row="2"
                           Grid.Column="1"
                           Padding="0,0,0,0"
                           CornerRadius="10"></Frame>
                            <Frame BackgroundColor="Transparent"
                           BorderColor="{StaticResource PrimaryColor}"
                           Grid.Row="3"
                           Grid.Column="1"
                           Padding="0,0,0,0"
                           CornerRadius="10"></Frame>
                            <Frame BackgroundColor="Transparent"
                           BorderColor="{StaticResource PrimaryColor}"
                           Grid.Row="6"
                           Grid.Column="1"
                           Padding="0,0,0,0"
                           CornerRadius="10"></Frame>
                            <Frame BackgroundColor="Transparent"
                           BorderColor="{StaticResource PrimaryColor}"
                           Grid.Row="5"
                           Grid.Column="1"
                           Padding="0,0,0,0"
                           CornerRadius="10"></Frame>
                            <Label Text="Pick-up"
                               TextColor="{StaticResource BlackColor}"
                               FontSize="Subtitle"
                               VerticalOptions="End"
                               Grid.Row="0"
                               Grid.ColumnSpan="2"
                               HorizontalOptions="Center"></Label>
                            <Label Text="Drop-off"
                               TextColor="{StaticResource BlackColor}"
                               FontSize="Subtitle"
                               VerticalOptions="End"
                               Grid.Row="4"
                               Grid.ColumnSpan="2"
                               HorizontalOptions="Center"></Label>


                            <renders:BorderlessDatePicker Grid.Row="1"
                                              Grid.Column="1"
                                              TextColor="{StaticResource GrayColor}"
                                              FontSize="Small"
                                              Margin="10,0,0,0"
                                              x:Name="pickUpDate"
                                                      HeightRequest="45"
                                                      Unfocused="PickUpDate_Unfocused"></renders:BorderlessDatePicker>

                            <renders:BorderlessTimePicker Grid.Row="2"
                                              Grid.Column="1"
                                              TextColor="{StaticResource GrayColor}"
                                              FontSize="Small"
                                              Margin="10,0,0,0"
                                              Placeholder="Pick-up time"
                                              x:Name="pickUpTime"></renders:BorderlessTimePicker>

                            <renders:BorderlessDatePicker Grid.Row="5"
                                              Grid.Column="1"
                                              TextColor="{StaticResource GrayColor}"
                                              FontSize="Small"
                                              Margin="10,0,0,0"
                                              x:Name="dropOffDate" ></renders:BorderlessDatePicker>

                            <renders:BorderlessTimePicker Grid.Row="6"
                                              Grid.Column="1"
                                              TextColor="{StaticResource GrayColor}"
                                              FontSize="Small"
                                              Margin="10,0,0,0"
                                              Placeholder="Drop-off time"
                                              x:Name="dropOffTime"></renders:BorderlessTimePicker>

                            <renders:BorderlessPicker Grid.Row="3"
                                          Grid.Column="1"
                                          Title="Pick-up location"
                                          TitleColor="{StaticResource GrayColor}"
                                          FontSize="Small"
                                          Margin="10,0,0,0"
                                          TextColor="{StaticResource GrayColor}"
                                          x:Name="pickUpLocation"
                                                  Unfocused="pickUpLocation_Unfocused"></renders:BorderlessPicker>

                            <renders:BorderlessPicker Grid.Row="7"
                                          Grid.Column="1"
                                          Title="Drop-off location"
                                          TitleColor="{StaticResource GrayColor}"
                                          FontSize="Small"
                                          Margin="10,0,0,0"
                                          TextColor="{StaticResource GrayColor}"
                                          x:Name="dropOffLocation"></renders:BorderlessPicker>

                            <ImageButton BackgroundColor='Transparent' 
                                     Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.calender.png}" 
                                     HeightRequest="30"
                                     Grid.Column="0"
                                     Grid.Row="1"></ImageButton>

                            <ImageButton BackgroundColor='Transparent' 
                                     Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.calender.png}" 
                                     HeightRequest="30"
                                     Grid.Column="0"
                                     Grid.Row="5"></ImageButton>

                            <ImageButton BackgroundColor='Transparent' 
                                     Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.time.png}" 
                                     HeightRequest="30"
                                     Grid.Column="0"
                                     Grid.Row="2"></ImageButton>

                            <ImageButton BackgroundColor='Transparent' 
                                     Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.time.png}" 
                                     HeightRequest="30"
                                     Grid.Column="0"
                                     Grid.Row="6"></ImageButton>

                            <ImageButton BackgroundColor='Transparent' 
                                     Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.location.png}" 
                                     HeightRequest="30"
                                     Grid.Column="0"
                                     Grid.Row="3"></ImageButton>

                            <ImageButton BackgroundColor='Transparent' 
                                     Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.location.png}" 
                                     HeightRequest="30"
                                     Grid.Column="0"
                                     Grid.Row="7"></ImageButton>
                        </Grid>

                        <Button BackgroundColor="{StaticResource PrimaryColor}"
                            Text="Next"
                            TextColor="{StaticResource BackGroundColor}"
                            BorderWidth="0"
                            CornerRadius="10"
                            Grid.Row="0"
                            Grid.Column="1"
                            x:Name="bookNowNxtBtn"
                            HeightRequest="45"
                            Margin="0,30,0,5"
                            Clicked="bookNowNxtBtn_Clicked"></Button>

                        <Button BackgroundColor="{StaticResource PrimaryColor}"
                            Text="Back"
                            TextColor="{StaticResource BackGroundColor}"
                            BorderWidth="0"
                            CornerRadius="10"
                            Grid.Row="0"
                            Grid.Column="1"
                            x:Name="backBtn"
                            HeightRequest="45"
                            Margin="0,0,0,10"
                            Clicked="backBtn_Clicked"></Button>


                    </StackLayout>
                </ScrollView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
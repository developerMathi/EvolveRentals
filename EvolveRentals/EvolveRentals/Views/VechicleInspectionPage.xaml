                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,10,0,10"
                            ColumnSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <ImageButton
                                Grid.Column="0"
                                BackgroundColor="Transparent"
                                HorizontalOptions="FillAndExpand"
                                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconPicture.png}"
                                VerticalOptions="CenterAndExpand" />

                            <ImageButton
                                Grid.Column="1"
                                BackgroundColor="Transparent"
                                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconPicture.png}"
                                VerticalOptions="CenterAndExpand" />

                            <ImageButton
                                Grid.Column="2"
                                BackgroundColor="Transparent"
                                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconPicture.png}"
                                VerticalOptions="CenterAndExpand" />
                            <ImageButton
                                Grid.Column="3"
                                BackgroundColor="Transparent"
                                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconPicture.png}"
                                VerticalOptions="CenterAndExpand" />
                        </Grid>
                    </Grid>
                </Grid>

                <Grid
                    Grid.Row="14"
                    BackgroundColor="{StaticResource PrimaryColorDuplicate}"
                    HeightRequest="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="50" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Margin="15,0,0,0"
                        FontFamily="Roboto-Bold"
                        FontSize="Medium"
                        TextColor="{StaticResource BackGroundColor}"
                        VerticalOptions="CenterAndExpand">
                        Spaire Tire
                    </Label>

                    <Image
                        x:Name="imgSpaire"
                        Grid.Column="1"
                        BackgroundColor="Transparent"
                        HeightRequest="30"
                        HorizontalOptions="CenterAndExpand"
                        Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconWhiteDown.png}"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="30" />
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="btnSpaire_Tapped" />
                    </Grid.GestureRecognizers>

                </Grid>

                <Grid
                    x:Name="grdSpareTire"
                    Grid.Row="15"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="False"
                    RowSpacing="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackLayout Margin="15,0" Orientation="Horizontal">
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Image
                                x:Name="btnSpareTireYes"
                                BackgroundColor="Transparent"
                                HeightRequest="15"
                                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconCircleUnselect.png}"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="15">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="btnSpareTireYes_Tapped" />
                                </Image.GestureRecognizers>
                            </Image>

                            <Label
                                FontFamily="Roboto-Medium"
                                FontSize="Medium"
                                TextColor="{StaticResource BlackColor}"
                                VerticalOptions="CenterAndExpand">
                                Yes
                            </Label>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Image
                                x:Name="btnSpareTireNo"
                                BackgroundColor="Transparent"
                                HeightRequest="15"
                                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconCircleUnselect.png}"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="15">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="btnSpareTireNo_Tapped" />
                                </Image.GestureRecognizers>
                            </Image>

                            <Label
                                FontFamily="Roboto-Medium"
                                FontSize="Medium"
                                TextColor="{StaticResource BlackColor}"
                                VerticalOptions="CenterAndExpand">
                                No
                            </Label>
                        </StackLayout>
                    </StackLayout>

                    <BoxView
                        Grid.Row="0"
                        HeightRequest="1"
                        VerticalOptions="EndAndExpand"
                        Color="{StaticResource GrayColor}" />

                    <Grid
                        x:Name="grdSpareTire1"
                        Grid.Row="1"
                        Margin="15,0"
                        IsVisible="False"
                        RowSpacing="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <input:CheckBox
                            x:Name="chkSpareTierFront"
                            Grid.Row="0"
                            Grid.Column="0"
                            FontFamily="Roboto-Bold"
                            Text="Front"
                            TextColor="{StaticResource BlackColor}"
                            TextFontSize="18"
                            Type="Material"
                            Color="{StaticResource PrimaryColorDuplicate}" />
                        <input:CheckBox
                            x:Name="chkSpareTierBack"
                            Grid.Row="0"
                            Grid.Column="1"
                            FontFamily="Roboto-Bold"
                            Text="Back"
                            TextColor="{StaticResource BlackColor}"
                            TextFontSize="18"
                            Type="Material"
                            Color="{StaticResource PrimaryColorDuplicate}" />

                        <input:CheckBox
                            x:Name="chkSpareTierDriverSide"
                            Grid.Row="1"
                            Grid.Column="0"
                            FontFamily="Roboto-Bold"
                            Text="Driver Side"
                            TextColor="{StaticResource BlackColor}"
                            TextFontSize="18"
                            Type="Material"
                            Color="{StaticResource PrimaryColorDuplicate}" />
                        <input:CheckBox
                            x:Name="chkSpareTierPassengerSide"
                            Grid.Row="1"
                            Grid.Column="1"
                            FontFamily="Roboto-Bold"
                            Text="Passenger Side"
                            TextColor="{StaticResource BlackColor}"
                            TextFontSize="18"
                            Type="Material"
                            Color="{StaticResource PrimaryColorDuplicate}" />

                        <Frame
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0"
                            Padding="0"
                            BackgroundColor="{StaticResource PrimaryColorDuplicate}"
                            CornerRadius="10"
                            HasShadow="False"
                            HeightRequest="50"
                            HorizontalOptions="FillAndExpand">
                            <StackLayout
                                HorizontalOptions="CenterAndExpand"
                                Orientation="Horizontal"
                                Spacing="10">
                                <ImageButton
                                    BackgroundColor="Transparent"
                                    HeightRequest="30"
                                    Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconWhiteCamera.png}"
                                    VerticalOptions="CenterAndExpand" />

                                <Label
                                    FontAttributes="Bold"
                                    FontFamily="Roboto-Bold"
                                    FontSize="Medium"
                                    TextColor="{StaticResource BackGroundColor}"
                                    VerticalOptions="CenterAndExpand">
                                    Upload Picture
                                </Label>
                            </StackLayout>
                        </Frame>

                        <Grid
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,10,0,10"
                            ColumnSpacing="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <ImageButton
                                Grid.Column="0"
                                BackgroundColor="Transparent"
                                HorizontalOptions="FillAndExpand"
                                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconPicture.png}"
                                VerticalOptions="CenterAndExpand" />

                            <ImageButton
                                Grid.Column="1"
                                BackgroundColor="Transparent"
                                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconPicture.png}"
                                VerticalOptions="CenterAndExpand" />

                            <ImageButton
                                Grid.Column="2"
                                BackgroundColor="Transparent"
                                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconPicture.png}"
                                VerticalOptions="CenterAndExpand" />
                            <ImageButton
                                Grid.Column="3"
                                BackgroundColor="Transparent"
                                Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconPicture.png}"
                                VerticalOptions="CenterAndExpand" />
                        </Grid>
                    </Grid>
                </Grid>

                <Frame
                    Grid.Row="16"
                    Margin="15,0"
                    Padding="0,0,0,0"
                    BackgroundColor="Transparent"
                    BorderColor="{StaticResource Black}"
                    CornerRadius="10"
                    HasShadow="False"
                    HeightRequest="50">
                    <Grid>
                        <renders:CustomEntry
                            x:Name="txtOther"
                            Margin="10,0,0,0"
                            FontFamily="Roboto-Medium"
                            FontSize="Medium"
                            Placeholder="Other Damage"
                            PlaceholderColor="{StaticResource Black}" />
                    </Grid>
                </Frame>

                <Frame
                    Grid.Row="17"
                    Margin="15,0"
                    Padding="0,0,0,0"
                    BackgroundColor="Transparent"
                    BorderColor="{StaticResource Black}"
                    CornerRadius="10"
                    HasShadow="False"
                    HeightRequest="50">
                    <Grid>
                        <renders:CustomEntry
                            x:Name="txtComments"
                            Margin="10,0,0,0"
                            FontFamily="Roboto-Medium"
                            FontSize="Medium"
                            Placeholder="Comments"
                            PlaceholderColor="{StaticResource Black}" />
                    </Grid>
                </Frame>
                <Frame
                    x:Name="frmSign"
                    Grid.Row="18"
                    Margin="15,0"
                    BorderColor="{StaticResource BlackColor}"
                    CornerRadius="10"
                    HasShadow="False"
                    HeightRequest="150"
                    VerticalOptions="FillAndExpand">
                    <controls:SignaturePadView
                        x:Name="signatureView"
                        Margin="10,0"
                        BackgroundColor="White"
                        CaptionTextColor="{StaticResource BlackColor}"
                        HorizontalOptions="FillAndExpand"
                        StrokeColor="Black"
                        StrokeWidth="3" />
                </Frame>

                <Grid
                    x:Name="grdSign"
                    Grid.Row="19"
                    Margin="15,10,15,20"
                    ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        x:Name="btnClear"
                        BackgroundColor="{StaticResource PrimaryColorDuplicate}"
                        CornerRadius="10"
                        HeightRequest="50"
                        HorizontalOptions="FillAndExpand"
                        Text="Vechicle"
                        TextColor="White"
                        VerticalOptions="CenterAndExpand" />

                    <Button
                        Grid.Column="1"
                        BackgroundColor="{StaticResource PrimaryColorDuplicate}"
                        CornerRadius="10"
                        HeightRequest="50"
                        HorizontalOptions="FillAndExpand"
                        Text="Back"
                        TextColor="White"
                        VerticalOptions="CenterAndExpand" />
                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
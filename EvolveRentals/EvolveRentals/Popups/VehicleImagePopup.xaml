<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
    mc:Ignorable="d"
             x:Class="EvolveRentals.Popups.VehicleImagePopup"
    CloseWhenBackgroundIsClicked="True">

    <pages:PopupPage.Animation>
        <animations:ScaleAnimation
           PositionIn="Center"
            PositionOut="Center"
            ScaleIn="1.2"
            ScaleOut="0.8"
            DurationIn="400"
            DurationOut="300"
            EasingIn="SinOut"
            EasingOut="SinIn"
            HasBackgroundAnimation="True"/>
    </pages:PopupPage.Animation>

    <Frame Margin="-1,0,-1,-1"
        Padding="15,15,15,15"
        BackgroundColor="{AppThemeBinding Dark={StaticResource BlackColor}, Light={StaticResource BackGroundColor}}"
        BorderColor="{StaticResource PrimaryColor}"
        CornerRadius="15"
        HorizontalOptions="Fill"
        VerticalOptions="EndAndExpand">
        <ScrollView>
            <StackLayout BackgroundColor="Transparent">
                <Label x:Name="TitleLabel"
                        VerticalOptions="Start" 
                        HorizontalOptions="CenterAndExpand"
                       TextColor="{StaticResource PrimaryColorDuplicate}"
                       Margin="0,10,0,15"
                       FontFamily="Roboto-Bold"
                        FontSize="Medium"/>


                <Button BackgroundColor="{StaticResource PrimaryColor}"
                        Text="Select from gallery"
                        TextColor="{StaticResource BackGroundColor}"
                        BorderWidth="0"
                        CornerRadius="10"
                        x:Name="GaleryBtn"
                        HeightRequest="45"
                        Margin="0,20,0,0"
                        Clicked="GaleryBtn_Clicked"
                        FontFamily="Roboto-Bold"
                        FontSize="Medium"></Button>


                <Button BackgroundColor="{StaticResource PrimaryColor}"
                        Text="Take a photo"
                        TextColor="{StaticResource BackGroundColor}"
                        BorderWidth="0"
                        CornerRadius="10"
                        x:Name="cameraBtn"
                        HeightRequest="45"
                        Margin="0,10,0,20"
                        Clicked="cameraBtn_Clicked"
                        FontFamily="Roboto-Bold"
                        FontSize="Medium"></Button>

                <Frame Padding="10"
                       BorderColor="{StaticResource PrimaryColor}"
                       BackgroundColor="Transparent"
                       IsVisible="False"
                       x:Name="PhotoFrame"
                       Margin="0,0,0,20">
                    <Image Aspect="AspectFit"
                           x:Name="selectedImage"></Image>
                </Frame>

                <Grid HorizontalOptions="Fill"
                              Margin="0,0,0,20"
                              ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button BackgroundColor="{StaticResource GrayColor}"
                                    Text="Cancel"
                                    TextColor="{StaticResource BackGroundColor}"
                                    BorderWidth="0"
                                    CornerRadius="10"
                                    x:Name="cancelBtn"
                                    HeightRequest="45"
                                    Grid.Row="0"
                                    Grid.Column="0"
                            IsVisible="False"
                             Clicked="cancelBtn_Clicked"
                            FontFamily="Roboto-Bold"></Button>

                    <Button BackgroundColor="{StaticResource GreenColor}"
                                    Text="Save"
                                    TextColor="{StaticResource BackGroundColor}"
                                    BorderWidth="0"
                                    CornerRadius="10"
                                    x:Name="SaveBtn"
                                    HeightRequest="45"
                                    Grid.Row="0"
                                    Grid.Column="1"
                            IsVisible="False"
                            Clicked="SaveBtn_Clicked"
                            FontFamily="Roboto-Bold"></Button>
                </Grid>



            </StackLayout>
        </ScrollView>
    </Frame>
</pages:PopupPage>
                                    x:TypeArguments="Thickness"
                                    Phone="0,0,10,0"
                                    Tablet="0,0,20,0" />
                            </On>
                            <On Platform="Android,Windows">
                                <OnIdiom
                                    x:TypeArguments="Thickness"
                                    Phone="0,0,10,0"
                                    Tablet="0,0,20,0" />
                            </On>
                        </OnPlatform>
                    </Label.Margin>
                    <Label.FontSize>

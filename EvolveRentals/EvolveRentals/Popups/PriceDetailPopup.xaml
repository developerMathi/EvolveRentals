                    Grid.Column="1"
                    FontFamily="Roboto-Medium"
                    HorizontalOptions="End"
                    TextColor="{StaticResource BlackColor}"
                    VerticalOptions="Center">
                    <Label.Margin>
                        <OnPlatform x:TypeArguments="Thickness">

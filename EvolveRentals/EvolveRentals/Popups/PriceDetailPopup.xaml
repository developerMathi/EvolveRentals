                    x:Name="totalRateLabel"
                    Grid.Row="4"
                    Grid.Column="1"
                    FontFamily="Roboto-Bold"
                    HorizontalOptions="End"
                    TextColor="{StaticResource BlackColor}"
                    VerticalOptions="Center">
                    <Label.Margin>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="iOS">
                                <OnIdiom
                                    x:TypeArguments="Thickness"
                                    Phone="0,0,10,0"

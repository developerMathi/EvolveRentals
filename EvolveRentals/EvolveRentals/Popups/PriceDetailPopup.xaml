                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="14"
                                        Tablet="18" />
                                </On>
                            </OnPlatform>
                        </Label.FontSize>
                    </Label>
                </StackLayout>
                <Label
                    x:Name="monthlyRateTotal"
                    Grid.Row="2"
                    Grid.Column="1"
                    FontFamily="Roboto-Medium"
                    HorizontalOptions="End"
                    TextColor="{StaticResource BlackColor}"
                    VerticalOptions="Center">
                    <Label.Margin>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="iOS">
                                <OnIdiom
                                    x:TypeArguments="Thickness"
                                    Phone="0,0,10,0"
                                    Tablet="0,0,20,0" />
                            </On>
                            <On Platform="Android,Windows">
                                <OnIdiom
                                    x:TypeArguments="Thickness"
                                    Phone="0,0,10,0"
                                    Tablet="0,0,20,0" />
                            </On>
                        </OnPlatform>
                    </Label.Margin>
                    <Label.FontSize>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On Platform="iOS">
                                <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="17"
                                    Tablet="20" />
                            </On>
                            <On Platform="Android,Windows">
                                <OnIdiom
                                    x:TypeArguments="x:Double"
                                    Phone="18"
                                    Tablet="22" />
                            </On>
                        </OnPlatform>
                    </Label.FontSize>
                </Label>
                <BoxView
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HeightRequest="1"
                    VerticalOptions="EndAndExpand"
                    Color="{StaticResource GrayColor}" />

                <StackLayout
                    Grid.Row="3"
                    Grid.Column="0"
                    Padding="0"
                    Spacing="0">
                    <StackLayout.Margin>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="iOS">
                                <OnIdiom
                                    x:TypeArguments="Thickness"
                                    Phone="10,0,0,0"
                                    Tablet="20,0,0,0" />
                            </On>
                            <On Platform="Android,Windows">
                                <OnIdiom
                                    x:TypeArguments="Thickness"
                                    Phone="10,0,0,0"
                                    Tablet="20,0,0,0" />
                            </On>
                        </OnPlatform>
                    </StackLayout.Margin>
                    <Label
                        FontFamily="Roboto-Bold"
                        Text="Week-end Rate"
                        TextColor="{StaticResource BlackColor}"
                        VerticalOptions="Center">
                        <Label.FontSize>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="17"

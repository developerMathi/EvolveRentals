    <Grid
        Margin="0,0"
        Padding="0"
        BackgroundColor="#80000000"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand">
        <Grid
            Grid.Row="0"
            BackgroundColor="Transparent"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="CenterAndExpand">
            <Grid.HeightRequest>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="iOS">
                        <OnIdiom
                            x:TypeArguments="x:Double"
                            Phone="320"
                            Tablet="350" />
                    </On>
                    <On Platform="Android,Windows">
                        <OnIdiom
                            x:TypeArguments="x:Double"
                            Phone="320"
                            Tablet="350" />
                    </On>
                </OnPlatform>
            </Grid.HeightRequest>
            <Grid.Margin>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOS">
                        <OnIdiom
                            x:TypeArguments="Thickness"
                            Phone="20,20,20,20"
                            Tablet="40,1,40,50" />
                    </On>
                    <On Platform="Android,Windows">
                        <OnIdiom
                            x:TypeArguments="Thickness"
                            Phone="20,20,20,20"
                            Tablet="40,1,40,50" />
                    </On>
                </OnPlatform>
            </Grid.Margin>
            <Frame
                Margin="0"
                Padding="0"
                BackgroundColor="{AppThemeBinding Dark={StaticResource Black}, Light={StaticResource BackGroundColor}}"
                CornerRadius="10"
                HasShadow="False"
                VerticalOptions="FillAndExpand"
                BorderColor="{StaticResource DanderRed}"
                >
                <Grid
                    Margin="0,5,0,10"
                    Padding="0"
                   BackgroundColor="{AppThemeBinding Dark={StaticResource Black}, Light={StaticResource BackGroundColor}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label
                        Grid.Row="0"
                        Margin="0,0,0,0"
                        FontAttributes="Bold"
                        FontFamily="Roboto-Bold"
                        FontSize="30"
                        HorizontalOptions="CenterAndExpand"
                        Text="Alert !"
                        TextDecorations="Underline"
                        TextColor="{StaticResource DanderRed}"
                        VerticalOptions="EndAndExpand">
                        <Label.FontSize>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="30"
                                        Tablet="32" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="30"
                                        Tablet="32" />
                                </On>
                            </OnPlatform>
                        </Label.FontSize>
                    </Label>
                    <BoxView
                        IsVisible="false"
                        Grid.Row="1"
                        Margin="10,0,10,10"
                        BackgroundColor="{StaticResource PrimaryColor}"
                        HeightRequest="3"
                        HorizontalOptions="Center"
                        VerticalOptions="Start"
                        WidthRequest="50" />

                    <Label
                        x:Name="contentText"
                        Grid.Row="1"
                        Margin="30,25,30,10"
                        FontFamily="Roboto-Medium"
                        HorizontalTextAlignment="Center"
                        TextColor="{AppThemeBinding Dark={StaticResource BackGroundColor}, Light={StaticResource BlackColor}}"
                        VerticalOptions="CenterAndExpand">
                        <Label.FontSize>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="16"
                                        Tablet="20" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="18"
                                        Tablet="22" />
                                </On>
                            </OnPlatform>
                        </Label.FontSize>
                    </Label>

                    <Button
                        x:Name="Okbtn"
                        Grid.Row="2"
                        Margin="20,20,20,20"
                        Padding="0"
                         BackgroundColor="{StaticResource PrimaryColor}"
                            BorderColor="{StaticResource PrimaryColor}"
                        BorderWidth="0"
                        Clicked="Okbtn_Clicked"
                        CornerRadius="10"
                        FontFamily="Roboto-Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="OKAY"
                        TextColor="{StaticResource BlackColor}"
                        VerticalOptions="CenterAndExpand">
                        <Button.HeightRequest>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="40"
                                        Tablet="50" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="40"
                                        Tablet="50" />
                                </On>
                            </OnPlatform>
                        </Button.HeightRequest>
                        <Button.FontSize>
                            <OnPlatform x:TypeArguments="x:Double">
                                <On Platform="iOS">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="16"
                                        Tablet="20" />
                                </On>
                                <On Platform="Android,Windows">
                                    <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="18"
                                        Tablet="22" />
                                </On>
                            </OnPlatform>
                        </Button.FontSize>
                    </Button>

                    <Grid
                        x:Name="canReserGrid"
                        Grid.Row="2"
                        Margin="0,0,0,0"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="StartAndExpand"
                        IsVisible="false">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>


                        <Button
                        x:Name="Okbtng"
                        Grid.Column="1"
                        Margin="20,20,20,20"
                        Padding="0"
                        BackgroundColor="{StaticResource PrimaryColor}"
                        BorderWidth="0"
                        Clicked="Okbtng_Clicked"
                        CornerRadius="10"
                        FontFamily="Roboto-Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="Yes"
                        TextColor="{StaticResource BlackColor}"
                        VerticalOptions="CenterAndExpand">
                            <Button.HeightRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="40"
                                        Tablet="50" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="40"
                                        Tablet="50" />
                                    </On>
                                </OnPlatform>
                            </Button.HeightRequest>
                            <Button.FontSize>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="16"
                                        Tablet="20" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="18"
                                        Tablet="22" />
                                    </On>
                                </OnPlatform>
                            </Button.FontSize>
                        </Button>

                        <Button
                        x:Name="noBtn"
                        Grid.Column="0"
                        Margin="20,20,20,20"
                        Padding="0"
                        BackgroundColor="{StaticResource BackGroundColor}"
                        BorderWidth="1"
                        Clicked="noBtn_Clicked"
                        CornerRadius="10"
                        FontFamily="Roboto-Bold"
                        HorizontalOptions="FillAndExpand"
                        Text="No"
                        TextColor="{StaticResource PrimaryColorDuplicate}"
                            BorderColor="{StaticResource PrimaryColorDuplicate}"
                        VerticalOptions="CenterAndExpand">
                            <Button.HeightRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="40"
                                        Tablet="50" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="40"
                                        Tablet="50" />
                                    </On>
                                </OnPlatform>
                            </Button.HeightRequest>
                            <Button.FontSize>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="iOS">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="16"
                                        Tablet="20" />
                                    </On>
                                    <On Platform="Android,Windows">
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="18"
                                        Tablet="22" />
                                    </On>
                                </OnPlatform>
                            </Button.FontSize>
                        </Button>







                    </Grid>

                </Grid>
            </Frame>

            <Grid
                Margin="0,-50,0,0"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="StartAndExpand">
                <Image
                    HeightRequest="100"
                    HorizontalOptions="CenterAndExpand"
                    Source="{local:EmbeddedImage ResourceId=EvolveRentals.Assets.iconPopupClose.png}"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="120" />
                <!--<Image
                    HeightRequest="40"
                    HorizontalOptions="CenterAndExpand"
                    Source="iconWhiteCorrectimage.png"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="40" />-->
            </Grid>
        </Grid>

    </Grid>

</pages:PopupPage>